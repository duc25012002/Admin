<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="sportCloths"
            type="com.hdcompany.admin.model.SportClothes" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/menu_background"
        android:orientation="vertical"
        tools:context=".activity.AddNewSportClothesActivity">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Add new Sport Cloth"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:background="@color/white">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/menu_background"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:text="Name:"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="@id/editTextName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/editTextName" />

                <EditText
                    android:id="@+id/editTextName"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:autofillHints="name"
                    android:text="@={sportCloths.name}"
                    android:hint="product name"
                    android:contentDescription="@string/content_description"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textViewDescription"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/textViewDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Description:"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="@id/editTextDescription"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/editTextDescription" />

                <EditText
                    android:id="@+id/editTextDescription"
                    android:layout_width="0dp"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"
                    android:textStyle="bold"
                    android:layout_height="48dp"
                    android:autofillHints="description"
                    android:hint="product detail"
                    android:text="@={sportCloths.description}"
                    android:contentDescription="@string/content_description"
                    android:layout_margin="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/textViewDescription"
                    app:layout_constraintTop_toBottomOf="@id/editTextName" />

                <TextView
                    android:id="@+id/textViewPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Price:"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="@id/editTextPrice"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/editTextPrice" />

                <EditText
                    android:id="@+id/editTextPrice"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:inputType="number"
                    android:autofillHints="price"
                    android:hint="product unit price"
                    android:contentDescription="@string/content_description"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textViewDescription"
                    app:layout_constraintTop_toBottomOf="@id/editTextDescription" />

                <TextView
                    android:id="@+id/textViewSale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Sale:"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/editTextSale"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/editTextSale" />

                <EditText
                    android:id="@+id/editTextSale"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:inputType="number"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:autofillHints="sale"
                    android:hint="discount from 0 to 100"
                    android:contentDescription="@string/content_description"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textViewDescription"
                    app:layout_constraintTop_toBottomOf="@id/editTextPrice" />

                <TextView
                    android:id="@+id/textViewCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Count:"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/editTextCount"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/editTextCount" />

                <EditText
                    android:id="@+id/editTextCount"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="5dp"
                    android:autofillHints="count"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:hint="product quantity"
                    android:contentDescription="@string/content_description"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textViewDescription"
                    app:layout_constraintTop_toBottomOf="@id/editTextSale" />

                <TextView
                    android:id="@+id/textViewTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"

                    android:text="Total Price:"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/editTextTotalPrice"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/editTextTotalPrice" />

                <TextView
                    android:id="@+id/editTextTotalPrice"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:padding="3dp"
                    android:layout_margin="5dp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"
                    android:textStyle="bold"
                    android:autofillHints="total price"
                    android:textSize="20sp"
                    android:gravity="center|left"
                    android:hint="total price"
                    android:contentDescription="@string/content_description"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textViewDescription"
                    app:layout_constraintTop_toBottomOf="@id/editTextCount" />

                <TextView
                    android:id="@+id/textViewPopular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Popular:"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/is_popular_radio_group"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/is_popular_radio_group" />

                <RadioGroup
                    android:id="@+id/is_popular_radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textViewPopular"
                    app:layout_constraintTop_toBottomOf="@id/editTextTotalPrice">

                    <RadioButton
                        android:id="@+id/popular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="Popular" />

                    <RadioButton
                        android:id="@+id/not_popular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="Not popular" />
                </RadioGroup>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/chooseBannerImageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="3"
                android:gravity="center|left"
                android:text="Add your banner image:\n(can choose only one)"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/check_status_banner_image"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="7"
                android:scaleType="fitStart"
                android:src="@drawable/x_sign" />
            <ImageView
                android:id="@+id/banner_image"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chooseSecondBannerImageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="3"
                android:gravity="center|left"
                android:text="Add your second one:\n(can choose only one)"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/check_status_second_banner_image"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="7"
                android:scaleType="fitStart"
                android:src="@drawable/x_sign" />
            <ImageView
                android:id="@+id/second_banner_image"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chooseListOfImagesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="3"
                android:gravity="center|left"
                android:text="Images that describe your product:\n(choose multiple times if needs)"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/check_status_list_images"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="7"
                android:scaleType="fitStart"
                android:src="@drawable/x_sign" />
            <ImageView
                android:id="@+id/list_images"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:visibility="gone"/>

        </LinearLayout>
        <TextView
            android:id="@+id/commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:background="@drawable/button_border"
            android:textAlignment="center"
            />
    </LinearLayout>
</layout>