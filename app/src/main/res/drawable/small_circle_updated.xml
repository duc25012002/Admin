<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->

    <!-- Shadow layer -->

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="250dp" />
            <solid android:color="#7A000000"/>
            <stroke
                android:width="5dp"
                android:color="#8B98F5E1" />
        </shape>
    </item>
    <item android:left="4dp" android:top="0dp" android:right="0dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="250dp" />
            <gradient
                android:angle="225"
                android:centerColor="#8eecf5"
                android:endColor="#98f5e1"
                android:startColor="@color/bg_login_screen" />
        </shape>
    </item>

</layer-list>
